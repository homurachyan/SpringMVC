<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.springmvc.dao.UserDao"> 
 
	<select id="selectUser" parameterType="com.springmvc.entity.User" resultType="com.springmvc.entity.User">  
	    SELECT * FROM test.demo WHERE name=#{name} AND password=#{password}  
	</select>  
	<insert id="insertUser" parameterType="com.springmvc.entity.User" flushCache="true">  
	   INSERT INTO test.demo (name,password) VALUES (#{name},#{password})  
	</insert>  
	<update id="updateUser" parameterType="com.springmvc.entity.User">  
	    UPDATE test.demo SET password=#{password} WHERE name=#{name}  
	</update>  
	<delete id="deleteUser" parameterType="int">  
	    DELETE FROM test.demo WHERE id=#{id}  
	</delete>  
	
</mapper>